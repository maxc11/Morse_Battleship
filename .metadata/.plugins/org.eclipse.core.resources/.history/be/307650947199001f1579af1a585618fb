/* Define all variables and Gpio objects here  */

//for btn
#define	UP 0b00001,
#define	LEFT 0b00010,
#define	RIGHT 0b00100,
#define	DOWN 0b01000,
#define	MIDDLE 0b10000
//--------------------


//gpio objects
XIntc sys_intc;
XTmrCtr sys_tmrctr;
Xuint32 data;
XGpio sys_btn;
XGpio sys_encoder;
